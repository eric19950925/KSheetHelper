<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> //指定形狀類型，默認為rectangle

    <solid android:color="#ffffff" /> //指定形狀的填充色

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" /> //設定內容區域離邊界的間距



    <stroke
        android:width="6dp"
        android:color="@color/sh_red"

        /> //設定描邊
</shape>